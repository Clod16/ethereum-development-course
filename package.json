{
  "name": "ethereum-development-course",
  "version": "0.0.1",
  "description": "Material for a Ethereum Development Course",
  "main": "index.js",
  "scripts": {
    "start": "webpack-dev-server",
    "build": "truffle compile",
    "precommit": "lint-staged",
    "test": "truffle test",
    "local-node": "ganache-cli",
    "web3-console": "truffle console --network local",
    "deploy-local": "truffle deploy --reset --network local"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ideatosrl/ethereum-development-course.git"
  },
  "keywords": [
    "Ethereum",
    "Solidity",
    "Blockchain",
    "SmartContracts",
    "DApps"
  ],
  "author": "Francesco Strazzullo (francesco.strazzullo@ideato.it)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ideatosrl/ethereum-development-course/issues"
  },
  "homepage": "https://github.com/ideatosrl/ethereum-development-course#readme",
  "lint-staged": {
    "*.js": [
      "standard --fix",
      "git add"
    ]
  },
  "dependencies": {
    "babel-polyfill": "6.26.0",
    "lodash.get": "4.4.2",
    "navigo": "7.1.2",
    "openzeppelin-solidity": "1.12.0",
    "sweetalert2": "7.26.29",
    "truffle-contract": "3.0.6",
    "web3": "1.0.0-beta.36"
  },
  "devDependencies": {
    "@babel/core": "7.0.1",
    "@babel/plugin-syntax-dynamic-import": "7.0.0",
    "@babel/preset-env": "7.0.0",
    "babel-eslint": "9.0.0",
    "babel-loader": "8.0.2",
    "babel-plugin-transform-custom-element-classes": "0.1.0",
    "ganache-cli": "6.1.8",
    "html-loader": "0.5.5",
    "html-webpack-plugin": "3.2.0",
    "husky": "0.14.3",
    "lint-staged": "7.2.2",
    "regenerator-runtime": "0.12.1",
    "standard": "12.0.1",
    "truffle": "5.0.0-beta.0",
    "webpack": "4.19.0",
    "webpack-cli": "3.1.0",
    "webpack-dev-server": "3.1.8"
  },
  "standard": {
    "parser": "babel-eslint",
    "globals": [
      "contract",
      "beforeEach",
      "it",
      "assert",
      "artifacts",
      "web3",
      "HTMLElement",
      "import",
      "USE_METAMASK"
    ]
  }
}
